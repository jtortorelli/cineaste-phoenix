<div id="top-billed-cast">
  <span class="table-header">Top Billed Cast</span>
  <table class="table table-nonfluid">
    <%= for view <- @top_billed_cast do %>
      <tr>
        <td class="minor">
          <%= render_people_link(@conn, view) %>
        </td>
        <td class="subdue">
          <%= for role <- view.roles do %>
            <%= role %><br/>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
