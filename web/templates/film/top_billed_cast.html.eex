<div id="top-billed-cast">
  <table class="table table-nonfluid">
    <thead><span class="table-header">Top Billed Cast</span></thead>
    <%= for view <- @top_billed_cast do %>
      <tr>
        <td class="minor">
          <%= render_people_link(@conn, view) %>
        </td>
        <td class="subdue">
          <%= for role <- view.roles do %>
            <%= role %><br/>
            <img src="<%= render_cast_thumb(view, role) %>" />
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
